/* Configuración del parser para gramática No.1 */
/* Sigue la gramática SLR: */
/* E → E + T | T */
/* T → T ∗ F | F */
/* F → ( E ) | id */

%token ID
%token PLUS
%token TIMES
%token LPAREN RPAREN
%token WS
IGNORE WS

%%

expression:
    term expression_rest
;

expression_rest:
    PLUS term expression_rest
  | /* empty production */
;

term:
    factor term_rest
;

term_rest:
    TIMES factor term_rest
  | /* empty production */
;

factor:
    LPAREN expression RPAREN
  | ID
;

